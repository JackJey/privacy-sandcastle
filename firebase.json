{
  "hosting": [
    {
      "target": "dsp",
      "public": "services/dsp/src/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/**",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "run": {
            "serviceId": "dsp",
            "region": "us-central1"
          }
        }
      ]
    },
